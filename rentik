    function copyWallet(id) {
      const el = document.getElementById(id);
      if (!el) return;
      const text = el.textContent.trim();
      if (!text) return;
      navigator.clipboard.writeText(text).then(() => {
        alert('–ê–¥—Ä–µ—Å —Å–∫–æ–ø–∏—Ä–æ–≤–∞–Ω: ' + text);
      });
    }

